<%args>
$trial_id
$project_additional_info => undef
</%args>


<&| /page/info_section.mas, title => 'General Info', collapsible=>1, collapsed=>1 &>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-bordered" id="crossing_experiment_additional_info_table">
% my @all_info = @$project_additional_info;
% foreach my $info (@all_info) {
                <tr>
                    <td><b><%$info->[0]%></b></td>
                    <td><%$info->[1]%></td>
                </tr>
%}
            </table>
        </div>
    </div>
</&>
<&| /page/info_section.mas, title => 'Female Parent Info', collapsible=>1, collapsed=>1 &>
    <div class = "well well-sm">
        <div class = "panel panel-default">
            <div class = "panel-body">
                <div style="overflow:scroll">
                    <table class="table table-hover table-bordered" id="project_female_info_table">
                        <thead>
                            <tr>
% my $project_female_info_key = $c->config->{crossing_experiment_female_info};
% my @column_header = split ',',$project_female_info_key;
% foreach my $column_header(@column_header){
                                <th><%$column_header%></th>
%}
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</&>
<&| /page/info_section.mas, title => 'Male Parent Info', collapsible=>1, collapsed=>1 &>
    <div class = "well well-sm">
        <div class = "panel panel-default">
            <div class = "panel-body">
                <div style="overflow:scroll">
                    <table class="table table-hover table-bordered" id="project_male_info_table">
                        <thead>
                            <tr>
% my $project_male_info_key = $c->config->{crossing_experiment_male_info};
% my @column_header = split ',',$project_male_info_key;
% foreach my $column_header(@column_header){
                                <th><%$column_header%></th>
%}
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</&>


<script>

jQuery(document).ready(function(){

    var project_id = "<% $trial_id %>";

    var project_female_info_table = jQuery('#project_female_info_table').DataTable({
        'ajax': '/ajax/cross/project_female_info/'+project_id,
        'autoWidth': false,
        'searching' : false,
        'destroy' : true,
    });

    var project_male_info_table = jQuery('#project_male_info_table').DataTable({
        'ajax': '/ajax/cross/project_male_info/'+project_id,
        'autoWidth': false,
        'searching' : false,
        'destroy' : true,
    });

});

</script>
